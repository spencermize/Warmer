	<div class="input-group col-md-1 date-holder ">
		<input type="text" class="date-first date form-control" placeholder="start date"/>
	</div>
	<div class="input-group col-md-1 date-holder ">
		<input type="text" class="date-last date form-control" placeholder="end date" />
